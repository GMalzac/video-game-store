

<div class="container">
<h2>All items</h2>
  <div class="row">
    <% @items.each do |item| %>
      <div class="col-xs-12 col-sm-4">
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%=  item.photo %>);">
          <div class="card-category">$ <%= item.price %></div>
          <div class="card-description">
            <h2><%= item.title %></h2>
            <p><%= item.description %>t</p>
          </div>
          <img class="card-user" src="<%= item.user.photo %>">
          <a class="card-link" href="#" ></a>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div
  id="map"
  style="width: 100%;
  height: 600px;"
  data-markers="<%= @markers.to_json %>"
></div>
