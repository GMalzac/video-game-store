<%= simple_form_for(@item) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
  </div>
  <div class="form-inputs">
    <%= f.input :description %>
  </div>
  <div class="form-inputs">
    <%= f.input :price %>
  </div>
  <div class="form-inputs">
    <%= f.input :console %>
  </div>
  <div class="form-inputs">
    <%= f.input :type %>
  </div>

  <!-- copy the photo form from the file "photo" inside this folder, once you add cloudinary -->

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
