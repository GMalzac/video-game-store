<div class="container">
<h2>All your bookings</h2>

  <div class="row">
    <% @bookings.each do |booking| %>
      <div class="col-xs-12 col-sm-4">
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%=  booking.item.photo %>);">
          <div class="card-category">$ <%= booking.item.price %></div>
          <div class="card-description">
            <h2><%= booking.item.title %></h2>
            <p><%= booking.item.description %></p>
            <p><%= booking.item.console %></p>
          </div>
          <img class="card-user" src="<%= booking.item.user.photo %>">
          <%= link_to " ",item_path(booking.item_id), class:"card-link" %>
        </div>
      </div>
    <% end %>
  </div>

</div>
